@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
<style>
    body {
        /*background: url('https://source.unsplash.com/twukN12EN7c/1920x1080') no-repeat center center fixed;*/
        background: url('https://localhost:44319/images/ProfileImage/Register.png') no-repeat center center fixed;
        background-size: cover;
    }
</style>
<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-12">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div class="image-area col-md-4">
                <label for="upload" id="proff"> <img id="imageResult" src="@Model.Input.ProfilePictureUrl" alt="" class="img-thumbnail rounded"> </label>
                <input hidden id="upload" class="col-md-10" name="imageFile" type="file" onchange="RenderTheImage();">
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger">Zz</div>
            <div class="form-group col-md-6">
                <label asp-for="Input.Username"></label>
                <input asp-for="Input.Username" class="form-control" disabled />
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Input.City.Name">Град</label>
                <select asp-for="Input.City.Name" class="form-control" asp-items="Model.AllCities">
                    <option selected> @Model.Input.City.Name </option>
                </select>
                <span asp-validation-for="Input.City.Name" class="text-danger"></span>
            </div>
            @if (Model.Input.IsSpecialist == true)
            {
                <div class="form-group col-md-6">
                    <label asp-for="Input.SpecialistDetails.CompanyName"></label>
                    <input asp-for="Input.SpecialistDetails.CompanyName" class="form-control" />
                    <span asp-validation-for="Input.SpecialistDetails.CompanyName" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Input.SpecialistDetails.Website"></label>
                    <input asp-for="Input.SpecialistDetails.Website" class="form-control" />
                    <span asp-validation-for="Input.SpecialistDetails.Website" class="text-danger"></span>
                </div>
                <div class="form-group col-md-10">
                    <label asp-for="Input.SpecialistDetails.AboutMe"></label>
                    <textarea asp-for="Input.SpecialistDetails.AboutMe" class="form-control tinymce-textarea"></textarea>
                    <span asp-validation-for="Input.SpecialistDetails.AboutMe" class="text-danger"></span>
                </div>
                <div class="form-group col-md-10">
                    <label asp-for="Input.SpecialistDetails.Experience"></label>
                    <textarea asp-for="Input.SpecialistDetails.Experience" class="form-control tinymce-textarea"></textarea>
                    <span asp-validation-for="Input.SpecialistDetails.Experience" class="text-danger"></span>
                </div>
                <div class="form-group col-md-10">
                    <label asp-for="Input.SpecialistDetails.Qualification"></label>
                    <textarea asp-for="Input.SpecialistDetails.Qualification" class="form-control tinymce-textarea"></textarea>
                    <span asp-validation-for="Input.SpecialistDetails.Qualification" class="text-danger"></span>
                </div>

            }

            <div class="col col-md-10">
                <label class="col-md-10" asp-for="Input.SpecialistDetails.Services"></label>
                @{ var counter = 1;
                    @foreach (var service in @Model.Input.SpecialistDetails.Services)
                    {
                        <div class="form-row">
                            <div class="col-md-10">
                                <div>
                                    <label>@counter. @service.Name</label>
                                </div>
                                <div>
                                    <label> - @service.Description</label>
                                </div>
                            </div>
                            <button class="btn col-md-2 custom-danger-btn" asp-page-handler="Delete" asp-route-id="@service.Id" onclick="return confirm('Услугата \'@service.Name\' ще бъде изтрита от профила Ви.')" style="height:36px;"> Премахни </button>
                        </div>
                        counter++;
                    }
                }

            </div>
            <div class="text-left col-md-12">
                <a class="btn btn-success col-md-10" onclick="AddMoreServices()" onload="LoadAllServices(@Model.Input.SpecialistDetails.Services)">Добави услуга</a><br /><br />
            </div>
            <div id="ServicesContainer"></div>
            <div class="text-left col-md-12">
                <button id="update-profile-button" type="submit" class="btn btn-primary col col-md-10" style="margin-top:3px;">Запази промените</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @*Add more services dinamically*@
    <script asp-append-version='true' src="~/js/MyCustomJs/Profile/Profile.js"></script>
    <partial name="_ValidationScriptsPartial" /> 

    @*Render img and show it's name*@
    <script src="~/js/MyCustomJs/Profile/renderProfileImg.js"></script>
}