@page
@model LoginModel

@{
    ViewData["Title"] = "Влез в профила си";
}

<div class="row text-center">
<h4 class="mx-auto custom-golden-text">@ViewData["Title"]</h4>
    <div class="col-md-12">
        <div class="col-md-4 mx-auto">
            <section>
                <form id="account" method="post">

                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email" class="custom-input-text"></label>
                        <input asp-for="Input.Email" style="-webkit-box-shadow: 0 0 0 30px white inset;" class="form-control custom-rounded-input-field custom-textarea-text" />
                        <span asp-validation-for="Input.Email" class="text-danger custom-input-text"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password" class="custom-input-text"></label>
                        <input asp-for="Input.Password" class="form-control custom-rounded-input-field custom-input-text" style="-webkit-box-shadow: 0 0 0 30px white inset;"/>
                        <span asp-validation-for="Input.Password" class="text-danger custom-input-text"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label class="custom-input-text" asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="custom-submit-button">Потвърди</button>
                    </div>
                    @*<div class="form-group">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                        </p>
                    </div>*@
                </form>
            </section>
        </div>
    </div>    
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
