@model ProSeeker.Web.ViewModels.Surveys.NewSurveyInputModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Промяна на анкета</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditSurvey" method="post">
            <div class="form-group">
                <label asp-for="@Model.Title" class="control-label"></label>
                <input asp-for="@Model.Title" class="form-control" />
                <span asp-validation-for="@Model.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="custom-submit-button">Промени</button>
                <input hidden asp-for="@Model.Id" name="id" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="SurveyIndex">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
