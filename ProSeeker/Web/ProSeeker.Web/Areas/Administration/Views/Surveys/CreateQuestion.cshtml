@model ProSeeker.Web.ViewModels.Surveys.Questions.NewQuestionInputModel

@{
    ViewData["Title"] = "Create";
}

<h1>Създаване на въпрос към анкета: <strong> @Model.SurveyTitle</strong></h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateQuestion">

            <div class="form-group">
                <label asp-for="@Model.Text" class="control-label"></label>
                <input asp-for="@Model.Text" class="form-control" />
                <span asp-validation-for="@Model.Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Number" class="control-label"></label>
                <input asp-for="@Model.Number" disabled class="form-control" />
                <input hidden name="number" value="@Model.Number" />
                <span asp-validation-for="@Model.Number" class="text-danger"></span>
            </div>
            <input hidden asp-for="@Model.SurveyId" class="form-control" />
            <div class="form-group">
                <input type="submit" value="Създай" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
