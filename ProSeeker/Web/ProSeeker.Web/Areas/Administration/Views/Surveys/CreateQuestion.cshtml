@model ProSeeker.Web.ViewModels.Surveys.Questions.NewQuestionInputModel

@{
    ViewData["Title"] = "Create";
}

<h3 class="mx-auto text-center custom-golden-text">Създаване на въпрос към анкета: <strong style="color:rgb(42, 93, 165);"> @Model.SurveyTitle</strong></h3>
<hr />
<div class="row text-center">
    <div class="col-md-5 mx-auto mt-2">
        <form asp-action="CreateQuestion" class="d-inline">

            <div class="form-group">
                <label asp-for="@Model.Text" class="control-label custom-input-text"></label>
                <input asp-for="@Model.Text" class="form-control custom-rounded-input-field custom-input-text" />
                <span asp-validation-for="@Model.Text" class="text-danger custom-input-text"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Number" class="control-label custom-input-text"></label>
                <input asp-for="@Model.Number" disabled class="form-control custom-rounded-input-field custom-input-text" />
                <input hidden name="number" value="@Model.Number" />
            </div>
            <input hidden asp-for="@Model.SurveyId" class="form-control" />
            <div class="form-group d-inline">
                <input type="submit" value="Създай" style="height:40px; font-size:16px;" class="custom-btn-no-background col-md-5 mt-4" />
            </div>
        </form>
        <form class="d-inline">
            <button class="custom-btn-no-background col-md-5 mt-4" style="height:40px; font-size:16px;" asp-action="SurveyIndex">Назад</button>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
