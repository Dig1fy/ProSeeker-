@using ProSeeker.Common
@using ProSeeker.Data.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject ProSeeker.Services.Data.UsersService.IUsersService usersService;

<ul class="navbar-nav d-inline-flex">
    @if (this.SignInManager.IsSignedIn(this.User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Profile">
                <img style="width: 35px; height:35px; border-radius: 50%;" title="Profile" asp-append-version="true" src="@this.usersService.GetUserProfilePicture(this.UserManager.GetUserId(this.User))" alt="@this.UserManager.GetUserName(this.User) Avatar" />
                Здравейте, @this.usersService.GetUserFirstNameById(this.UserManager.GetUserId(this.User))!
            </a>
        </li>

        <li class="dropdown-btn-wrapper nav-item flex-grow-1" style="padding:10px; padding-top:12px;">
            <i class="fas fa-chevron-circle-down" style="opacity:9; color:cornflowerblue;"></i>
            <div class="dropdown-content">
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Profile">Акаунт</a>
                <a asp-area="" asp-controller="Ads" asp-action="Create">Моите обяви</a>
                <a asp-area="" asp-controller="Ads" asp-action="Create">нищо няма тук</a>
                <a asp-area="" asp-controller="Ads" asp-action="Create">оф</a>
            </div>
        </li>

        if (this.User.IsInRole(GlobalConstants.AdministratorRoleName))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Administration" asp-controller="Dashboard" asp-action="Index" title="Admin">Админ</a>
            </li>
        }
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@(this.Url.Action("Index", "Home", new { area = string.Empty }))">
                <button type="submit" style="padding-top: 15%; " class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>

    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/RegisterOptions">Регистрация</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Влез</a>
        </li>
    }
</ul>
