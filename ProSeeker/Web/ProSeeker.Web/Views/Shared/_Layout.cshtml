@using ProSeeker.Common
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@this.ViewData["Title"] - @GlobalConstants.SystemName</title>
    <link href="~/lib/fontawesome/css/all.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/site.min.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/MyCustomCss/Common/common.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/MyCustomCss/Common/buttons.css" rel="stylesheet" asp-append-version="true" />

    @*<link href="~/css/MyCustomCss/Profile/userProfile.css" rel="stylesheet" asp-append-version="true" />*@
    @await this.RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">@GlobalConstants.SystemName</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Начало</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="servicesDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Обяви</a>
                            <div class="dropdown-menu dropdown-menu-center" aria-labelledby="servicesDropdown">

                                <a class=" text-center custom-a-as-button" asp-area="" asp-controller="Ads" asp-action="Create">Създай обява</a>

                                <div class="dropdown-divider"></div>
                                <div class="d-md-flex align-items-start justify-content-start custom-mega-menu-content">
                                    <vc:navbar-categories></vc:navbar-categories>

                                    @*<div style="width:270px;">
                                            <div class="dropdown-header">За дома</div>
                                            <a asp-route-id="архитект" asp-controller="Ads" asp-action="GetByCategory" class="dropdown-item">Архитект</a>
                                            <a asp-route-id="геодезист" asp-controller="Ads" asp-action="GetByCategory" class="dropdown-item">Геодезист</a>
                                            <a asp-route-id="интериорен дизайнер" asp-controller="Ads" asp-action="GetByCategory" class="dropdown-item">Интериорен дизайнер</a>
                                            <a asp-route-id="брокер" asp-controller="Ads" asp-action="GetByCategory" class="dropdown-item">Консултант-недвижими имоти</a>
                                        </div>
                                        <div style="width:270px;">
                                            <div class="dropdown-header">За колата</div>
                                            <a asp-route-id="автомонтьор" asp-controller="Ads" asp-action="GetByCategory" class="dropdown-item">Автомонтьор</a>
                                            <a asp-route-id="автобояджия" asp-controller="Ads" asp-action="GetByCategory" class="dropdown-item">Автобояджия</a>
                                            <a asp-route-id="тенекиджия" asp-controller="Ads" asp-action="GetByCategory" class="dropdown-item">Тенекиджия</a>
                                            <a asp-route-id="тазаджия" asp-controller="Ads" asp-action="GetByCategory" class="dropdown-item">Газаджия</a>
                                        </div>
                                        <div style="min-width:270px;">
                                            <div class="dropdown-header">Други</div>
                                            <a asp-route-id="адвокат" asp-controller="Ads" asp-action="GetByCategory" class="dropdown-item">Адвокат</a>
                                            <a asp-route-id="зъболекар" asp-controller="Ads" asp-action="GetByCategory" class="dropdown-item">Зъболекар</a>
                                            <a asp-route-id="психолог" asp-controller="Ads" asp-action="GetByCategory" class="dropdown-item">Психолог</a>
                                            <a asp-route-id="фотограф" asp-controller="Ads" asp-action="GetByCategory" class="dropdown-item">Фотограф</a>
                                            <a asp-route-id="счетоводител" asp-controller="Ads" asp-action="GetByCategory" class="dropdown-item">Счетоводител</a>
                                            <a asp-route-id="фризьор" asp-controller="Ads" asp-action="GetByCategory" class="dropdown-item">Фризьор</a>
                                        </div>*@
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">
            @this.RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - @GlobalConstants.SystemName - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" asp-append-version="true"></script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>
    @await this.RenderSectionAsync("Scripts", required: false)
</body>
</html>
