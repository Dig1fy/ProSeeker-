@model ProSeeker.Web.ViewModels.Ads.GetAllViewModel

@if (!Model.Ads.Any())
{
    <h2>Все още нямате регистрирани обяви!</h2>
}

@if (TempData["Message"] != null)
{

    <div class="alert alert-success alert-dismissible text-center" style="font-size:20px;" role="alert">
        @TempData["Message"]
    </div>
}

@foreach (var ad in Model.Ads)
{
    <section class="card border-info mb-3" id="custom-shadow-transform">
        <h2 class="card-header">
            @ad.ShortTitle
        </h2>

        <div style="padding:8px 8px 8px 8px;">
            <span class="card-text d-block">
                <span>@Html.Raw(@ad.SanitizedShortDescription)<br></span>

            </span>
            <div class="row" style="margin-top:-20px;">
                <div class="col-lg-4 item">
                    <b class="d-block mb-5"><i class="fas fa-city"> гр.</i> @ad.City.Name</b>
                    Категория - @ad.JobCategory.Name
                </div>
                <div class="col-lg-4 item">
                    <b class="d-block mb-5"><i class="far fa-calendar-alt"></i> От: <time class="d-block mb-5" datetime="@ad.CreatedOn.ToString("O")"> </time></b>
                </div>
                <div class="col-lg-4 item">
                    <b class="d-block mb-5"><i class="fas fa-hand-holding-usd"> Предвиден бюджет:</i> @ad.PreparedBudget</b>
                </div>
            </div>
        </div>
        <div class="button-container">
            <div style="margin:5px;" class="">
                <div>
                    <form method="post">
                        <div class="text-left">                            
                            <button type="submit" class="custom-submit-button" style="width:145px; margin-bottom:7px;" asp-route-id="@ad.Id" asp-controller="Ads" asp-action="GetById">Детайли</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
}