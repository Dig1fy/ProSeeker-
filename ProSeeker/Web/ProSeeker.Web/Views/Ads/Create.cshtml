@model ProSeeker.Web.ViewModels.Ads.CreateAdInputModel

<div class="hero-wrap hero-wrap-2" style="background-image: url('images/bg_1.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>

</div>
<div class="text-center">

    <h1>Създай обява</h1>
</div>
<section class="ftco-section bg-light">
    <div class="container">
        <div class="row">

            <div class="col-md-12 col-lg-12 mb-5">
                <form method="post" class="p-5 bg-transparent">
                    <div class="row form-group mb-4">
                        <div class="col-md-12 mb-3 mb-md-0">
                            <h4>
                                <label asp-for="@Model.Title"></label>
                            </h4>
                            <input asp-for="@Model.Title" class="form-control text" />
                            <span asp-validation-for="@Model.Title" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-12 mb-3 mb-md-0">
                            <div class="form-group ">
                                <h4>
                                    <label asp-for="@Model.Description"></label>
                                </h4>
                                <textarea asp-for="@Model.Description" class="form-control tinymce-textarea"></textarea>
                                <span asp-validation-for="@Model.Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row form-group mb-4">
                        <div class="col-md-12 mb-3 mb-md-0">
                            <h4>
                                <label asp-for="@Model.PreparedBudget"></label>
                            </h4>
                            <input asp-for="@Model.PreparedBudget" class="form-control text" />
                            <span asp-validation-for="@Model.PreparedBudget" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row form-group mb-4">
                        <div class="col-md-6 mb-3 mb-md-0">
                            <h4>
                                <label>Град</label>
                            </h4>
                            <select asp-for="@Model.CityId" class="form-control" asp-items="@Model.Cities.Select(x=>new SelectListItem { Text = x.Name, Value = x.Id.ToString()})">
                                <option disabled selected> - Select city - </option>
                            </select>
                            <span asp-validation-for="@Model.CityId" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-6 mb-md-6">
                            <h4>
                                <label asp-for="@Model.JobCategoryId"></label>
                            </h4>
                            <select asp-for="@Model.JobCategoryId" class="form-control" asp-items="@Model.Categories.Select(x=>new SelectListItem { Text = x.Name, Value = x.Id.ToString()})">
                                <option disabled selected> - Select category - </option>
                            </select>
                            <span asp-validation-for="@Model.JobCategoryId" class="text-danger"></span>
                        </div>
                    </div>

                    <hr />

                    <div class="row ">
                        <div class="col-md-6 custom-submit-button-wrapper">
                            <button asp-controller="Ads" asp-action="Create" class="col-md-12 custom-submit-button">Създай</button>
                        </div>
                    </div>


                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
    <script src="~/js/TinyMCE/TinyMce.js" type="text/javascript"></script>

}