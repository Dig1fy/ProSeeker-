@model ProSeeker.Web.ViewModels.Offers.CreateOfferInputModel

<div class="hero-wrap hero-wrap-2" style="background-image: url('https://thumbs.dreamstime.com/z/author-office-writer-concept-desk-background-top-view-mock-up-professional-white-work-89923761.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>

</div>
<div class="text-center">

    <h1>Създай обява</h1>
</div>
<section class="ftco-section bg-light">
    <div class="container">
        <div class="row">

            <div class="col-md-12 col-lg-12 mb-5">
                <form method="post" class="p-5 bg-transparent">
                    <div class="row form-group mb-4">
                        <div class="col-md-12 mb-3 mb-md-0">
                            <h4>
                                <label asp-for="@Model.Price"></label>
                            </h4>
                            <input asp-for="@Model.Price" class="form-control text" />
                            <span asp-validation-for="@Model.Price" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-12 mb-3 mb-md-0">
                            <div class="form-group ">
                                <h4>
                                    <label asp-for="@Model.Description"></label>
                                </h4>
                                <textarea asp-for="@Model.Description" class="form-control"></textarea>
                                <span asp-validation-for="@Model.Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row form-group mb-4">
                        <div class="col-md-12 mb-3 mb-md-0">
                            <h4>
                                <label asp-for="@Model.StartDate"></label>
                            </h4>
                            <input asp-for="@Model.StartDate" class="form-control text" />
                            <span asp-validation-for="@Model.StartDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row form-group mb-4">
                        <div class="col-md-12 mb-3 mb-md-0">
                            <h4>
                                <label asp-for="@Model.ExpirationDate"></label>
                            </h4>
                            <input asp-for="@Model.ExpirationDate" class="form-control text" />
                            <span asp-validation-for="@Model.ExpirationDate" class="text-danger"></span>
                        </div>
                    </div>

                    <hr />

                    <div class="row ">
                        <div class="col-md-6 custom-submit-button-wrapper">
                            <button asp-controller="Offers" asp-action="Create" class="col-md-12 custom-submit-button">Изпрати</button>
                        </div>
                    </div>
                    <input type="hidden" asp-for="@Model.AdId" name="adId" />
                    <input type="hidden" asp-for="@Model.ApplicationUserId" name="applicationUserId" />

                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    @*<partial name="_ValidationScriptsPartial" />*@
    <script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
    <script src="~/js/TinyMCE/TinyMce.js" type="text/javascript"></script>

}