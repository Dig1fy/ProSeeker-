@model ProSeeker.Web.ViewModels.Offers.OfferDetailsViewModel

<div class="col-md-3 m-2 ">
    <div class="card m-2 custom-background-shadows" style="width: 18rem;">
        <div class="card-body custom-background-shadows">
            <div class="row">
                <div class="col-md-3 position-absolute ">
                    <img src="@Model.SpecialistDetails.User.ProfilePicture" style="width:100px;height:100px; border-radius:50%;" class="float-left">
                </div>
                <div class="col-md-12 text-right ">
                    <p class="card-title custom-input-text">@Model.SpecialistDetails.User.FullName</p>
                    <p class="card-title"><i style="color:cornflowerblue" class="fas fa-globe-americas"></i> @Model.SpecialistDetails.User.City.Name</p>
                    <p class="card-title"><i style="color:cornflowerblue" class="fas fa-briefcase"></i> @Model.SpecialistDetails.JobCategory.Name</p>
                </div>
                <div class="col-md-12">
                    <form asp-controller="SpecialistsDetails" asp-action="GetProfile" asp-route-id="@Model.SpecialistDetails.Id">
                        <button class="col-md-12 custom-submit-button text-center" style="box-shadow:none;">Виж профил</button>
                    </form>
                </div>
            </div>
        </div>
        <ul class="list-group list-group-flush custom-text-shadows">
            <li class="list-group-item">Офертна цена: @Model.Price лева</li>
            <li class="list-group-item">@Html.Raw(Model.SanitizedDescription)</li>
        </ul>
        <div class="card-body text-center">
            <form asp-controller="Offers" asp-action="Details" asp-route-offerId="@Model.Id" method="post">
                <button type="submit" style="text-decoration:none;" class="custom-submit-button text-center">Отвори детайли</button>
            </form>
        </div>
    </div>
</div>