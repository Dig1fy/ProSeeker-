@model ProSeeker.Web.ViewModels.EmailsSender.EmailFromContactsInputModel 


<div class="page-heading header-text">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <h2 class="custom-golden-text" style="font-size:35px;">Контактна форма</h2>
            </div>
        </div>
    </div>
</div>

<div class="contact-information">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="contact-item float-right">
                    <i class="fa fa-phone d-inline"></i>
                    <h4 class="wfloat-right d-inline custom-input-text">Телефон за връзка</h4>
                    <p class="wfloat-right">+359 555 555 555</p>
                    <p>Можете да се обадите още сега</p>
                </div>
            </div>            
            <div class="col-md-12 ">
                <div class="contact-item float-right">
                    <i class="fa fa-map-marker d-inline"></i>
                    <h4 class="d-inline custom-input-text">Адрес</h4>
                    <p>бул. „Александър Малинов“ 78<br> в.з. Американски колеж <br />гр. София</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="callback-form contact-us">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="text-center">
                    <h4 class="custom-input-text m-4" style="font-size:22px;">Изпратете своето запитване още сега!</h4>                    
                </div>
            </div>
            <div class="col-md-12">
                <div class="contact-form">
                    <form method="post" asp-action="Index" asp-controller="Contacts">
                        <div asp-validation-summary="ModelOnly" class="text-danger custom-input-text"></div>
                        <div class="row mx-auto">
                            <div class="col-lg-7 col-md-12 col-sm-12 mx-auto mt-2">
                                <fieldset>
                                    <input type="text" asp-for="@Model.FromName" class="form-control custom-rounded-input-field" placeholder="Вашите имена...">
                                    <span asp-validation-for="@Model.FromName" class="text-danger custom-input-text"></span>
                                </fieldset>
                            </div>
                            <div class="col-lg-7 col-md-12 col-sm-12 mx-auto mt-2">
                                <fieldset>
                                    <input type="text" asp-for="@Model.FromEmail"  class="form-control custom-rounded-input-field" placeholder="Вашият имейл...">
                                    <span asp-validation-for="@Model.FromEmail" class="text-danger custom-input-text"></span>
                                </fieldset>
                            </div>
                            <div class="col-lg-7 col-md-12 col-sm-12 mx-auto mt-2">
                                <fieldset>
                                    <input type="text" asp-for="@Model.Subject"  class="form-control custom-rounded-input-field" placeholder="Тема">
                                    <span asp-validation-for="@Model.Subject" class="text-danger custom-input-text"></span>
                                </fieldset>
                            </div>
                            <div class="col-lg-12 mx-auto mt-2">
                                <fieldset>
                                    <textarea rows="6" asp-for="@Model.Content"  class="form-control custom-rounded-input-field" placeholder="Вашето съобщение..."></textarea>
                                    <span asp-validation-for="@Model.Content" class="text-danger custom-input-text"></span>
                                </fieldset>
                            </div>
                            <div class="col-lg-12 ml-1">
                                <fieldset>
                                    <button type="submit" class="custom-btn-no-background-v2">Изпрати</button>
                                </fieldset>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>